//Exponential smoothing
//Palette repeat
@:repeat = real(1);
//Divergent
@:diverge = bool(true);
//Convergent
@:converge = bool(false);
//Diverge sum
@:dexp = expression(exp(-|z|));
//Converge sum
@:cexp = expression(exp(-1/|z-z_1|));

real :sum = 0.0;
real :csum = 0.0;

calc:
  if (:diverge)
    :sum += :dexp;

  if (:converge)
    :csum += :cexp;

result:
  real mu = :sum;
  if (!:diverge || :converge && converged)
    mu =  :csum;
    
  colour = gradient(:repeat * mu / real(limit));

